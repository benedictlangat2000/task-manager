{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node", // Keep node types if you need them 
    ]
  },
  "include": ["server.ts", "models/**/*", "resolvers.ts"],
  "exclude": ["node_modules"]
}
